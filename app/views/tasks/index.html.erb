<h1>To Do List!</h1>
  <% @tasks.each do |task| %>
  <ul>
    <li><%= link_to task.title, task_path(task.id) %></li>
    <li><%= link_to "Remove Task", destroy_task_path(task), method: :delete  %></li>
    <% if task.completed %>
      <li><%= link_to "Mark Not Done", toggle_path(task), method: :patch %></li>
    <% else %>
      <li><%= link_to "Mark Done", toggle_path(task), method: :patch %></li>
    <% end %>
  </ul>
<% end %>
  <h3><%= link_to "Create New Task!", tasks_new_path %></h3>
